<div class="content-container">
  <div class="course-info">
    <div class="course-level">
      <%= @course.language.name.upcase %><span>, </span><%= @course.level.upcase %>
       </div>
         <%= link_to course_path(@course) do %>
         <div class="course-title"><%= @course.title %>
         </div>
         <% end %>
         <hr>
        <div class="teacher-content">
          <div class="teacher-photo">
            <% if @user.photo.present? %>
            <div class="avatar-large">
              <%= link_to user_path(@course.user.id) do %>
                <%= cl_image_tag @course.user.photo, class: "avatar-large" %>
              <% end %>
            </div>
            <% else %>
              <i class="far fa-user fa-2x" style="margin-top: 3px;"></i>
            <% end %>
          </div>
          <div class="teacher-info">
            <div id="name-teacher"><%= link_to "#{@course.user.name}", user_path(@course.user.id), :class => "user-profile-links" %>
            </div>
            <% @course.user.interest_tags.first(8).each do |interest| %>
            <div class="interest-content">
              <%= interest.content %>
            </div>
            <% end %>
            <div>
              <% unless @course.user.teacher_rating.nil? %>
                <% rating = @course.user.teacher_rating %>
                <% rating.round.times do %>
                <i class="fa fa-star"></i>
              <% end %>
              <% end %>
            </div>
          </div>
        </div>
        <hr>
        <div>
          <span>Price: </span><p><%= @course.price.to_i %>â‚¬ per student</p>
    </div>
    <div>
    <span>Dates: </span><p><%= @course.start_date&.strftime("%-d %B") %> - <%= @course.end_date&.strftime("%-d %B") %></p>
    </div>
    <% @course.course_days.each do |day| %>
    <div>
      <span>Days: </span><p><%= day.working_day %></p>
    </div>
    <% end %>
  </div>

  <!-- payment -->
    <%= form_tag new_course_booking_path([@course, @booking, @payment]) do %>
     <script class="booking-button" method="post"
        data-name="<%= @course.title%>"
        data-email="<%= current_user.email %>"
        data-description="<%= @course.language.name %> - <%= @course.level%>"
        data-amount="<%#= @booking.amount %>"
        data-currency="<%#= @booking.amount.currency %>"></script>
    <% end %>
</div>





