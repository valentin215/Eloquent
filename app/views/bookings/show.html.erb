


<div class="content-container" style="text-align: left; margin-top: 40px; border-radius: 4px; padding-top: 10px; padding-bottom: 30px;">
  <div class="course-info">
   <div><i class="far fa-check-circle"></i><h1>Your booking is paid. </h1>
  </div>
    <h4>You're now booked on the following course:</h4> <br>
    <div class="course-level">
      <%= @course.language.name.upcase %><span>, </span><%= @course.level.upcase %>
    </div>
    <%= link_to course_path(@course) do %>
    <div class="course-title">
      <%= @course.title %>
    </div>
    <% end %>
    <div>
      <span>Price paid: </span><p><%= @course.price.to_i %>â‚¬ per student</p>
    </div>
    <div>
      <span>Dates: </span><p><%= @course.start_date.strftime("%-d %B") %> - <%= @course.end_date.strftime("%-d %B") %></p>
    </div>
    <% @course.course_days.each do |day| %>
    <div>
      <span>Days: </span><p><%= day.working_day %></p>
    </div>
    <% end %>

    <div style="padding-top: 30px;">
      <p id="teacher-name-payment"> Your teacher for this course is :</p>
      <br>
      <p><strong><%= @course.user.name  %></strong></p>
    </div>
    </div>
      <%= cl_image_tag @course.user.photo, height: 80, width: 80, radius: 50, crop: :fill, class: "teacher-photo-payment" %> <br>

    <%= link_to "Go to your profile", user_path(@booking.user.id)%> <br>
    <%= link_to "Book another course", root_path %> <br>
