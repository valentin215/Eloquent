<div class="content-container">
  <h1 id="search-result"><%=@courses.count%> courses available</h1>
  <div class="cards">
    <% @courses.each do |course| %>
      <div class="card-course">
        <div class="teacher-content">
            <div class="teacher-photo">
              <img class="avatar-large" alt="avatar-large" src="https://kitt.lewagon.com/placeholder/users/arthur-littm">
            </div>
            <div class="teacher-info">
              <%= link_to course_path(course) do %>
              <div><%= course.user.name %></div>
              <% end %>
              <% course.user.interest_tags.each do |interest| %>
              <div class="interest-content">
                <%= interest.content %>
              </div>
              <% end %>
              <div>
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
              </div>
            </div>
        </div>
        <div class="course-content">
          <div class="course-info">
            <div class="course-level">
              <%= course.language.name.upcase %><span>, </span><%= course.level.upcase %>
            </div>
              <div class="course-title"><%= course.title %></div>
              <div><span>Price: </span><%= course.price.to_i %>â‚¬ per student</div>
              <div><span>Dates: </span><%= course.start_date.strftime("%-d %B") %> - <%= course.end_date.strftime("%-d %B") %></div>
              <% course.course_days.each do |day| %>
              <div><span>Days: </span><%= day.working_day %></div>
            <% end %>
          </div>

          <div class="course-area-spots">
              <div class="course-area">
                <%= image_tag "marker2.jpeg"%>
                <p><%= course.area %></p>
              </div>
              <div class="course-spots">
                 <span>5 spots left</span>
                <i class="far fa-user-circle"></i>
                <i class="far fa-user-circle"></i>
                <i class="far fa-user-circle"></i>
                <i class="far fa-user-circle"></i>
                <i class="far fa-user-circle"></i>
              </div>
          </div>
        </div>
        </div>
        <hr>
      <% end %>
  </div>
</div>


