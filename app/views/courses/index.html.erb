<div class="content-container">
  <h1><%=@courses.count%> courses in availables</h1>


  <div class="cards">
    <% @courses.each do |course| %>
      <div class="card-course">
        <div class="teacher-content">
            <div class="teacher-photo">
              <img class="avatar-large" alt="avatar-large" src="https://kitt.lewagon.com/placeholder/users/arthur-littm">
            </div>
            <div class="teacher-info">
              <%= link_to course_path(course) do %>
              <div><%= course.user.name %></div>
              <% end %>
              <% course.user.interest_tags.each do |interest| %>
              <div class="interest-content">
                <%= interest.content %>
              </div>
              <% end %>
              <div>
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
              </div>
            </div>
        </div>
        <div class="course-content">
          <div class="course-info">
            <div class="course-level">
              <%= course.language.name.upcase %><span>, </span><%= course.level.upcase %>
            </div>
            <div class="course-title"><%= course.title %></div>
            <div>Price: <%= course.price %> â‚¬ per student</div>
            <div>Dates: <%= course.start_date %> <%= course.end_date %></div>
            <div><% course.course_days.each do |day| %></div>
              <%= day.working_day %>
            <% end %>
          </div>

          <div class="course-area">
              <%= course.area %>
          </div>
        </div>
        </div>
        <hr>
      <% end %>
  </div>
</div>


