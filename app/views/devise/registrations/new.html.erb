<div class="content-container">
    <div class="search-form">
         <div class="text-center">
          <img class="text-center" style="opacity: 0.55; width: 130px; margin-bottom: 40px;" src="https://image.flaticon.com/icons/svg/78/78373.svg">
          </div>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>

          <div class="text-left">
            <div class="form-login-name">
              <%= f.input :email,
                          placeholder: 'Your Name',
                          label: false,
                          required: false,
                          autofocus: true,
                          input_html: { autocomplete: "email"},
                          class: 'form-control' %>
              <div class="icon-name">
                <%= icon('fas', 'signature') %>
              </div>
            </div>
            <div class="form-login-email" style="margin-top: 0px">
              <%= f.input :name,
                          placeholder: 'Your Email',
                          label: false,
                          required: false,
                          autofocus: true,
                          input_html: { autocomplete: "name" },
                          class: 'form-control'%>
              <div class="icon-envelope">
                  <%= icon('fas', 'envelope') %>
                </div>
            </div>
            <div class="form-login-password">
              <%= f.input :password,
                        placeholder: 'Your Password',
                        label: false,
                        required: false,
                        input_html: { autocomplete: "new-password" },
                        class: 'form-control' %>
              <div class="icon-password">
                <%= icon('fas', 'lock') %>
              </div>
            </div>
            <div class="form-login-password">
              <%= f.input :password_confirmation,
                          placeholder: 'Password confirmation',
                          label: false,
                          required: false,
                          input_html: { autocomplete: "new-password" },
                          class: 'form-control' %>
              <div class="icon-password">
                <%= icon('fas', 'lock') %>
              </div>
            </div>
          </div>
          <div class="form-actions">
            <%= f.button :submit, "Sign up", class: "button-search"%>
          </div>
        <% end %>
        <br>
        <%= render "devise/shared/links" %>
      </div>
    </div>
