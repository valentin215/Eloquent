
<div class="home-container">
<%= render 'shared/banner' %>

<div class="content-container">
  <div class="search-form">
    <%= form_tag(courses_index_path, method: :get) do |f| %>
      <div class="flag">
        <%= text_field_tag :language, params[:language], name: "query[language]", class: 'form-control', placeholder: "Spanish" %>
        <div class="icon-flag">
          <%= icon('far', 'flag') %>
        </div>
      </div>
          <div class="location">
            <%= text_field_tag :city, params[:city], name: "query[city]", class: 'form-control', placeholder: "Barcelona" %>
            <div class="icon-location">
              <%= icon('fas', 'map-marker-alt') %>
            </div>
          </div>
      <%= submit_tag 'Search', class: "button-search" %>
    <% end %>
  </div>
  <div class="become-teacher-div">
    <%= link_to 'Become a Teacher', new_course_path, class: "become-teacher btn button-search"%>
  </div>
</div>
