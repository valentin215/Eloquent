<!-- payment -->
<h1>Payment <%= @course.title %></h1>
<%= form_tag course_payments_path(@course) do %>
  <article>
    <label class="amount">
      <span>Amount: <%= humanized_money_with_symbol(@course.price) %></span>
    </label>
  </article>
  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
    data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
    data-name="My Course"
    data-email="<%= current_user.email %>"
    data-description="<%= @course.title %>"
    data-amount="<%= @course.price_cents %>"
    data-currency="<%= @course.price.currency %>"></script>
<% end %>
