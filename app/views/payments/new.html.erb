<div class="content-container" style="text-align: center; margin-top: 40px; border-radius: 4px; padding-top: 10px; padding-bottom: 30px;">
  <div class="course-info">
    <div class="course-level">
      <%= @course.language.name.upcase %><span>, </span><%= @course.level.upcase %>
    </div>
    <%= link_to course_path(@course) do %>
    <div class="course-title">
      <%= @course.title %>
    </div>
    <% end %>
    <div>
      <span>Price: </span><p><%= @course.price.to_i %>â‚¬ per student</p>
    </div>
    <div>
      <span>Dates: </span><p><%= @course.start_date.strftime("%-d %B") %> - <%= @course.end_date.strftime("%-d %B") %></p>
    </div>
    <% @course.course_days.each do |day| %>
    <div>
      <span>Days: </span><p><%= day.working_day %></p>
    </div>
    <% end %>
    <div style="padding-top: 30px;">
      <p id="teacher-name-payment"> Your teacher will be:</p>
      <br>
      <p><strong><%= @course.user.name  %></strong></p>
    </div>
    </div>
      <%= cl_image_tag @course.user.photo, height: 80, width: 80, radius: 50, crop: :fill, class: "teacher-photo-payment" %>
      <%= form_tag course_payments_path(@course) do %>
        <article>
          <label class="amount">
            <span>Total amount: <%= humanized_money_with_symbol(@course.price) %></span>
          </label>
        </article>
        <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
        data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
        data-name="My Course"
        data-email="<%= current_user.email %>"
        data-description="<%= @course.title %>"
        data-amount="<%= @course.price_cents %>"
        data-currency="<%= @course.price.currency %>"></script>
    <% end %>
</div>
