<div class="container">

      <div class="form-post">
        <h1>Complete your profile</h1>
          <%= simple_form_for current_user do |f| %>

            <div>

              <%= f.input :name, input_html: { class:'remove-bootstrap'},
              required: true, label: "Name", class: 'form-control', placeholder: "E.g. Mick Jagger" %>
            </div>
            <div >
              <%= f.input :nationality, collection: countries, input_html: { class:'remove-bootstrap'},
              hint: "leave it blank if you don't want to change it",
              required: true, label: "Country" %>
            </div>
            <div>
              <%= f.input :native_language, input_html: { class:'remove-bootstrap'},
              hint: "leave it blank if you don't want to change it",
              required: true, collection: spoken_lang %>
            </div>
            <div>
              <%= f.input :biography, input_html: { class:'remove-bootstrap'},
              hint: "leave it blank if you don't want to change it",

              required: true, label: "Tell us a little bit about you" %>

            </div>
            <div>
              <%= f.input :photo, input_html: { class:'remove-bootstrap'},
              hint: "leave it blank if you don't want to change it",
              required: true, label: "Upload your profile picture" %>
            </div>
            <br>
            <h1>What of the following tags describe you better</h1>
            <p>Choose 3 per category</p>
            <% @tags_by_category.each do |category, taglist| %>
                <div class="col-xs-12 col-sm-12">
                  <fieldset class="form-group">
                  <input type="hidden" name="user[interest_tag_ids][]" value="">

                  <span><b><%= category.content %></span></b>

                  
 
                  <div class="category-choices">
                    <% taglist.each do |tag| %>
                      <% if current_user.user_interests.find_by(interest_tag: tag) %>
                        <input class="hidden" hidden type="checkbox" value="<%= tag.id %>" name="user[interest_tag_ids][]" id="user_interest_tag_ids_<%= tag.id %>">
                        <label class="category-choice active" for="user_interest_tag_ids_<%= tag.id %>"><%= tag.content %>
                        </label>
                      <% else %>
                        <input class="hidden" hidden type="checkbox" value="<%= tag.id %>" name="user[interest_tag_ids][]" id="user_interest_tag_ids_<%= tag.id %>">
                        <label class="category-choice" for="user_interest_tag_ids_<%= tag.id %>"><%= tag.content %>
                        </label>
                      <% end %>
                    <% end %>
                  </div>
                </div>
              <% end %>
            <%= f.submit "Save", class: "button-search" %>
          <% end %>
    </div>

  </div>
</div>
