<%= cl_image_tag @user.photo, height: 180, width: 180, radius: 50, crop: :fill %>

<h1><%= @user.name %></h1>
<h3>Student</h3>
<%= @user.nationality%>

<h2>About me</h2>
<%= @user.biography%>

<h2>categories</h2>

<% @categories.each do |cat| %>
  <h2><%= cat.content %></h2>
  <% @tags.each do |tag| %>
    <%= tag.content %>
  <% end %>
<% end %>

<h2>Native Language</h2>
<%= @user.native_language%>

<h2>Next courses</h2>
<%#= @user.course.title %>



<% if current_user.student? %>
  <h2>My bookings</h2>
  <% current_user.bookings.each do |booking| %>
    <%= booking.course.level %>
    <%= booking.course.language.name %>
    <%= booking.course.title %>
    <%= booking.course.start_date.strftime("%-d %B") %> - <%= booking.course.end_date.strftime("%-d %B") %>
    <% if booking.review.nil? %>
      <p>Enter your review!</p>
      <%= simple_form_for [@booking, @review] do |f| %>
        <%= f.input :content %>
        <%= f.input :rating %>
        <%= f.button :submit, class: "btn btn-danger" %>
      <% end %>
    <% else %>
      <p>Review Given: <%= booking.review.try(:content) %></p>
      <p></p>
    <%# else  %>
    <%#= render 'reviews/form', booking: booking, review: Review.new %>
    <!-- <p>add review</p> -->
    <%# end %>
    <% end %>
  <% end %>

<% elsif current_user.teacher? %>
  <h2>My Reservations</h2>
  <% @bookings.each do |booking| %>
     <%= booking.user.name %>
     <%= booking.course.title %>
     <%= booking.course.start_date.strftime("%-d %B") %> - <%= booking.course.end_date.strftime("%-d %B")%>
  <% end %>

<% else %>
  <p> You have no reservation !</p>
<% end %>




<%= link_to "Edit my profile", edit_user_path(current_user) %>
