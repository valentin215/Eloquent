<div class="content-container">

  <!--- profil header --->

  <div class="profil-header">
    <div class="header-infos">
      <h1><%= @user.name %></h1>
      <% if current_user.student? %>
          <div class="header-nationality">
            <h4>STUDENT,</h4>
            <h4><%= @user.nationality.upcase%></h4>
          <% else %>
            <h4>TEACHER,</h4>
            <h4><%= @user.nationality.upcase%> </h4>
      <% end %>
          </div>
      </div>
      <%= cl_image_tag @user.photo, class: 'avatar-large' %>
  </div>

  <!--- profil description --->

  <div class="profil-description">
    <h2>About me</h2>
    <p><%= @user.biography%></p>
  </div>

<hr>
  <!--- profil categories --->

  <div class="profil-interests">
      <% @categories.each do |cat| %>
      <div class="interest-categories">
        <h2><%= cat.content %></h2>
        <% @tags.each do |tag| %>
          <div class="interest-content">
            <%= tag.content %>
          </div>
        <% end %>
      </div>
      <% end %>
  </div>

  <hr>

  <!--- profil languages  --->

  <div class='profil-languages'>
    <h2>Native Language</h2>
    <p><%= @user.native_language%></p>
  </div>

  <hr>

  <!--- profil bookings  --->

  <div class="profil-bookings">
      <% if current_user.student? %>
        <h2>Next courses</h2>
         <% @bookings.each do |booking| %>
         <div class="course-info" style="margin-bottom: 12px;">
          <div class="course-level">
            <%= booking.course.level %><span>, </span>
            <%= booking.course.language.name %>
          </div>
          <div class="course-title" style="margin-bottom: -2px;">
            <p><%= booking.course.title %></p>
          </div>
          <div class="course-date-review">
            <p>Dates: <%= booking.course.start_date.strftime("%-d %B").downcase %> - <%= booking.course.end_date.strftime("%-d %B").downcase %></p>
            <div class="course-review">
              <%= link_to "Add review", reviews_new_path(current_user)%>
            </div>
          </div>
            <%# if booking.reviewed? %>
          <%#booking.review.try(:content) %>
          <%# else  %>
          <%#= render 'reviews/form', booking: booking, review: Review.new %>
          <!-- <p>add review</p> -->
          <%# end %>
           </div>
       <% end %>
        <% elsif current_user.teacher? %>
        <h2>My Reservations</h2>
          <% @bookings.each do |booking| %>
            <%= booking.user.name %>
            <%= booking.course.title %>
            <%= booking.course.start_date.strftime("%-d %B") %> - <%= booking.course.end_date.strftime("%-d %B")%>
          <% end %>
        <% else %>
          <p> You have no reservation !</p>
        <% end %>
    </div>

  <% if current_user.teacher? %>
    <div class='profil-reviews'>
      <p>review</p>
    </div>
  <% end %>


<%= link_to "Edit my profile", edit_user_path(current_user) %>

</div>
